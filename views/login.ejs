<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel='stylesheet' href='css/bootstrap.css' />
    <link rel='stylesheet' href='css/style.css' />
  </head>
  <body>
    <div class="d-flex justify-content-center">
      <a href="/"><img src="/images/logo.png"></a>
    </div>
    <h1>Login</h1>
    <form id="formLogin" name="login" method="post" action="/login">
      <div class="form-group">
        <label class="bold">Username</label>
        <input type=text class="form-control" id="inputUserName" placeholder="Enter username">
      </div>
      <div class="form-group">
        <label class="bold">Password</label>
        <input type="password" class="form-control" id="inputUserPassword" placeholder="Password">
      </div>
      <button id="btnSubmit" type="submit" class="btn btn-primary">Login</button>
    </form>
  </body>
</html>
